{
  "name": "@microbankservices/auth-service",
  "version": "1.0.0",
  "description": "",
  "main": "lib/main/main.js",
  "scripts": {
    "test": "jest --passWithNoTests  --runInBand --no-cache  --silent",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "test:unit": "npm test --watch",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "lint": "eslint .",
    "lint:fix": "npm lint -- --fix",
    "clean": "rimraf lib",
    "serve": "npm run build && firebase serve --only functions:auth-service",
    "dev": "nodemon --watch src -e ts --exec 'npm run serve'",
    "build": "npm run clean && tsc -p tsconfig-build.json && npm run tsc-alias",
    "tsc-alias": "npx tsc-alias",
    "typeorm:cli": "typeorm-ts-node-commonjs",
    "migration:create": "npm run typeorm:cli -- migration:create ./src/infra/postgres/migrations/$npm_config_name",
    "migration:run": "npm run typeorm:cli -- migration:run -d ./src/infra/postgres/helpers/typeorm-cli-config.ts",
    "migration:revert": "npm run typeorm:cli -- migration:revert -d ./src/infra/postgres/helpers/typeorm-cli-config.ts",
    "entity:create": "npm run typeorm:cli -- entity:create src/infra/postgres/entities/$npm_config_name"
  },
  "keywords": [
    "@microbankservices/auth-service"
  ],
  "author": "paulo.hsilvavieira@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^17.0.8",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "jest-mock-extended": "^2.0.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.17.1",
    "firebase-admin": "^11.3.0",
    "firebase-functions": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typeorm": "^0.3.10",
    "uuid": "^8.3.2"
  }
}
